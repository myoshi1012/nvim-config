{
  "hover.target": "float",
  "suggest.enableFloat": true,
  "diagnostic.checkCurrentLine": false,
  "coc.preferences.jumpCommand": "drop",
  // "coc.preferences.formatOnSave": true,
  "[css][typescript][typescriptreact][javascript][javascriptreact][json][jsonc][graphql]": {
    "coc.preferences.formatOnSave": true
  },
  "[lua]": {
    "coc.preferences.formatOnSave": true
  },
  "eslint.autoFixOnSave": true,
  // coc-explorer
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "nvim-web-devicons",
  "explorer.file.showHiddenFiles": true,
  "tsserver.useLocalTsdk": true,
  "Lua.telemetry.enable": true,
  "workspace.rootPatterns": [".git", ".hg", "package.json"]
}
